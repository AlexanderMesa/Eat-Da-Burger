<h1>
    <center>Burgers</center>
</h1>

<div style="float: left; height: 600px">
    <h3>Burgers to Eat</h3>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{this.burger_name}}
            <button data-id="{{this.id}}" class="devour">Devour</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div style="float: right; height: 600px">
    <h3>Devoured Burgers</h3>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            {{this.burger_name}}
            <button data-id="{{this.id}}" class="digest">Digest</button>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<div style="clear: both">
    <form class="create-form">
        <div class="form-group">
            <label for="burger">Add a Burger:</label>
            <input type="text" id="burger" name="name">
            <button type="submit">Add Burger</button>
        </div>
    </form>
</div>