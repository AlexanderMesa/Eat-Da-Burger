<h1>Burgers</h1>

<h3>Burgers To Eat</h3>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.burger_name}}
        <button data-id="{{this.id}}" class="devour">Devour</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h3>Devoured Burgers</h3>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>